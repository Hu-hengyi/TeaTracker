%h1 Listing users

%table
  %tr
    %th Name
    %th Email
    %th Type
    %th
    %th

  - @users.each do |user|
    %tr
      %td= link_to user.name, user_path(user)
      %td= link_to user.email, user_path(user)
      %td= link_to user.user_type.name.capitalize, user_path(user)
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Remove User', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New User', new_user_path
