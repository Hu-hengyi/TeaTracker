-content_for(:left_bar_title, @user.name)
-content_for(:left_bar_content) do
  = link_to 'Edit User', edit_user_path(@user), :class => "left_bar_button edit"
  = link_to 'Back to users', users_path, :class => "left_bar_button"

%p#notice= notice

%div
  %p
    Email Address:
    = @user.email

  %p
    User Type:
    = @user.type.capitalize

  %p
    Password:
    = link_to 'Edit Password', edit_user_password_path(@user)

