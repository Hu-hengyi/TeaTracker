<div class="login">
  <%  if flash[:notice].blank?
      else
        flash[:notice]
      end
  %>

  <%= flash[:notice] %>
    <div class="logo"></div>
    <h1 class="teatracker">
      <sup>Tea</sup>Tracker
    </h1>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :class=>"field", :placeholder=>"Email" %>
    <%= f.password_field :password, :class=>"field", :placeholder=>"Password" %>

  <% if devise_mapping.rememberable? -%>
    <fieldset class="checkbox-label">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </fieldset>
  <% end -%>
  <%= render "devise/shared/links" %>

  <%= f.submit "LOGIN", :class => "green-btn", :id=>"SignIn" %>
<% end %>
</div>

