-content_for(:left_bar_title, @farm.name)
-content_for(:left_bar_content) do
  = link_to 'Edit ' + @farm.name, edit_farm_path(@farm), :class => "left_bar_button edit"
  = link_to 'Back to farms', farms_path, :class => "left_bar_button"
%p
  Bushes: 
  = @farm.bushes

%p
  Workers: 
  = @farm.workers

%p
  Latitude: 
  = @farm.latitude

%p
  Longitude:
  = @farm.longitude

%h3 All Tea Deposits For This Farm
-content_for(:content) do
  %table.data
    %tr
      %th= deposit_header('Weight', @sort_by)
      %th= deposit_header('Quality', @sort_by)
      %th= deposit_header('Created', @sort_by)
      %th= deposit_header('Farm', @sort_by)
      %th= deposit_header('Collection Point', @sort_by)
      %th
      %th

    - @deposits.each do |deposit|
      %tr
        %td= deposit.weight
        %td= deposit.quality
        %td= deposit.created_at
        -if deposit.farm
          %td= deposit.farm.name
        -else
          %td
        -if deposit.cp
          %td= deposit.cp.name
        -else
          %td
        %td= link_to 'Show', deposit
        %td= link_to 'Edit', edit_deposit_path(deposit)
        %td= link_to 'Destroy', deposit, :method => :delete, :data => { :confirm => 'Are you sure?' }
