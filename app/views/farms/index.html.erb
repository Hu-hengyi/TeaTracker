<h1>Listing farms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bushes</th>
    <th>Workers</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @farms.each do |farm| %>
  <tr>
    <td><%= farm.name %></td>
    <td><%= farm.bushes %></td>
    <td><%= farm.workers %></td>
    <td><%= farm.longitude %></td>
    <td><%= farm.latitude %></td>
    <td><%= farm.notes %></td>
    <td><%= link_to 'Show', farm %></td>
    <td><%= link_to 'Edit', edit_farm_path(farm) %></td>
    <td><%= link_to 'Destroy', farm, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

